<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 날짜 선택 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.CardView.Filled">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageButton
                    android:id="@+id/btnPrevDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_left"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2025년 1월 2일"
                    android:clickable="true"
                    android:focusable="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <ImageButton
                    android:id="@+id/btnNextDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_right"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <!-- 달력 -->
        <android.widget.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            tools:visibility="gone"
            />
        </LinearLayout>

        <!-- 혈당 기록 그리드 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <!-- 공복 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFasting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/card_glucose_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공복"
                        style="@style/CardTitleStyle"/>

                    <TextView
                        android:id="@+id/tvFastingValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- mg/dL"
                        style="@style/CardValueStyle"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="터치하여 기록"
                        style="@style/CardHintStyle"
                        android:layout_marginTop="4dp"/>

                    <!-- 상태 인디케이터 -->
                    <ProgressBar
                        android:id="@+id/statusIndicator"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:progressTint="@color/status_normal"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 체중 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/card_weight_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        style="@style/CardTitleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="체중" />

                    <TextView
                        android:id="@+id/tvWeightValue"
                        style="@style/CardValueStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:text="-- kg"
                        android:textSize="20sp" />

                    <TextView
                        style="@style/CardHintStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="터치하여 기록" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 아침 식전 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBreakfastBefore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_glucose_bg"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아침 식전"
                        style="@style/CardTitleStyle"/>

                    <TextView
                        android:id="@+id/tvBreakfastBeforeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- mg/dL"
                        style="@style/CardValueStyle"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="터치하여 기록"
                        style="@style/CardHintStyle"
                        android:layout_marginTop="4dp"/>

                    <ProgressBar
                        android:id="@+id/statusIndicatorBreakfastBefore"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:progressTint="@color/status_normal"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 아침 식후 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBreakfastAfter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_glucose_bg"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아침 식후"
                        style="@style/CardTitleStyle"/>

                    <TextView
                        android:id="@+id/tvBreakfastAfterValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- mg/dL"
                        style="@style/CardValueStyle"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="터치하여 기록"
                        style="@style/CardHintStyle"
                        android:layout_marginTop="4dp"/>

                    <ProgressBar
                        android:id="@+id/statusIndicatorBreakfastAfter"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:progressTint="@color/status_normal"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 점심 식전 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLunchBefore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_glucose_bg"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="점심 식전"
                        style="@style/CardTitleStyle"/>

                    <TextView
                        android:id="@+id/tvLunchBeforeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- mg/dL"
                        style="@style/CardValueStyle"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="터치하여 기록"
                        style="@style/CardHintStyle"
                        android:layout_marginTop="4dp"/>

                    <ProgressBar
                        android:id="@+id/statusIndicatorLunchBefore"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:progressTint="@color/status_normal"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 점심 식후 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLunchAfter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_glucose_bg"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="점심 식후"
                        style="@style/CardTitleStyle"/>

                    <TextView
                        android:id="@+id/tvLunchAfterValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- mg/dL"
                        style="@style/CardValueStyle"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="터치하여 기록"
                        style="@style/CardHintStyle"
                        android:layout_marginTop="4dp"/>

                    <ProgressBar
                        android:id="@+id/statusIndicatorLunchAfter"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:progressTint="@color/status_normal"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 저녁 식전 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDinnerBefore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_glucose_bg"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="저녁 식전"
                        style="@style/CardTitleStyle"/>

                    <TextView
                        android:id="@+id/tvDinnerBeforeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- mg/dL"
                        style="@style/CardValueStyle"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="터치하여 기록"
                        style="@style/CardHintStyle"
                        android:layout_marginTop="4dp"/>

                    <ProgressBar
                        android:id="@+id/statusIndicatorDinnerBefore"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:progressTint="@color/status_normal"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 저녁 식후 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDinnerAfter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_glucose_bg"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="저녁 식후"
                        style="@style/CardTitleStyle"/>

                    <TextView
                        android:id="@+id/tvDinnerAfterValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- mg/dL"
                        style="@style/CardValueStyle"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="터치하여 기록"
                        style="@style/CardHintStyle"
                        android:layout_marginTop="4dp"/>

                    <ProgressBar
                        android:id="@+id/statusIndicatorDinnerAfter"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:progressTint="@color/status_normal"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>

        <!-- 공복 추적 차트 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/Widget.Material3.CardView.Elevated">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/pretendard_bold"
                        android:text="공복 변화 추적"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="최근 7일 평균"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                        <TextView
                            android:id="@+id/tvFastingAverage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="155"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textColor="?attr/colorPrimary"/>
                    </LinearLayout>
                </LinearLayout>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chartFasting"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
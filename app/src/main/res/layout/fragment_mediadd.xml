<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F8F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 진료 기록 제목 -->
        <TextView
            android:id="@+id/tvRecordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진료 기록 입력"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <!-- 병원명 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="병원명"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#555555" />

        <EditText
            android:id="@+id/etHospitalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="예: 서울대학교병원"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <!-- 진료 날짜 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진료 날짜"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#555555" />

        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="YYYY-MM-DD"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:focusable="false"
            android:clickable="true"
            android:onClick="showDatePicker" />

        <!-- 담당 의사 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="담당 의사"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#555555" />

        <EditText
            android:id="@+id/etDoctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <!-- 처방 내용 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="처방 내용"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#555555" />

        <EditText
            android:id="@+id/etPrescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="예: 고혈압 약 1일 1회 복용"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textMultiLine" />

        <!-- 진료 노트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진료 노트"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#555555" />

        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="추가 메모를 입력하세요"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textMultiLine" />

        <!-- 다음 예약일 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음 예약일"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#555555" />

        <EditText
            android:id="@+id/etNextAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="YYYY-MM-DD"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:focusable="false"
            android:clickable="true"
            android:onClick="showDatePicker" />

        <!-- 저장 버튼 -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
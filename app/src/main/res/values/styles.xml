<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- 카드뷰 글자 스타일 -->
    <style name="CardTitleStyle">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CardValueStyle">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CardHintStyle">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <style name="CustomTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/normal_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/deep_blue</item>
        <item name="colorSecondary">@color/strong_blue</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="materialButtonStyle">@style/CustomTimePickerButtonStyle</item>
    </style>

    <style name="CustomTimePickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/normal_blue</item>
        <item name="rippleColor">@color/lighter_blue</item>
    </style>

    </resources>